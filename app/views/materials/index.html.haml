.heading-container
  .container
    %h1 Available Materials
.container
  - if notice
    .alert.alert-success{ role: 'alert' }
      %p= notic e
  - if alert
    .alert.alert-danger{ role: 'alert'}
      %p= alert
  %table.table.table-striped.table-hover.index-table
    %thead
      %tr
        %th Name
        %th Source
        %th Estimated Duration
        %th Difficulty Level
    %tbody
      - @materials.each do |material|
        %tr
          %td= link_to material.name, material_path(material)
          %td= link_to material.source, material_path(material)
          %td= link_to minutes_in_words(material.duration), material_path(material)
          %td= link_to material.difficulty, material_path(material)
  %br/
  = link_to 'New Material', new_material_path
